<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/ui_spacing_normal"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ui_spacing_small"
            android:layout_marginBottom="@dimen/ui_spacing_small"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:baselineAlignBottom="true"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ui_spacing_small"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textviewdocument_no_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:paddingLeft="@dimen/ui_spacing_small"
                    android:paddingTop="@dimen/ui_spacing_xsmall"
                    android:scaleType="centerCrop"
                    android:text="Amount"
                    android:textColor="#000000"
                    android:textSize="@dimen/regular_text" />

                <TextView
                    android:id="@+id/textviewdocument_date_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="end"
                    android:paddingTop="@dimen/ui_spacing_xsmall"
                    android:text="quantiyt"
                    android:layout_marginRight="7dp"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ui_spacing_small"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textviewname_of_applicant"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/ui_spacing_small"
                    android:paddingTop="@dimen/ui_spacing_small"
                    android:paddingBottom="@dimen/ui_spacing_xsmall"
                    android:text="product"
                    android:textColor="#010203"
                    android:textSize="@dimen/regular_text" />

                <TextView
                    android:id="@+id/textviewlicence_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:layout_marginRight="7dp"
                    android:gravity="end|center_vertical"
                    android:paddingTop="@dimen/ui_spacing_small"
                    android:text="Amnt"
                    android:textColor="#010203"
                    android:textSize="@dimen/regular_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>